<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"

        tools:context=".MainActivity">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="end|bottom"
            android:enabled="false"
            android:focusable="false"
            android:padding="15sp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="80sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/buac"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:onClick="buclear"
                    android:text="AC"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <Button
                    tools:ignore="ButtonStyle"
                    android:onClick="operationClick"
                    android:id="@+id/busign"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:textColor="@color/black"

                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:text="+/-"
                    android:textSize="30sp" />

                <Button
                    tools:ignore="ButtonStyle"
                    android:id="@+id/bumod"
                    android:onClick="operationClick"
                    android:textColor="@color/black"

                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey"
                    android:text="%"
                    android:textSize="36sp" />

                <Button
                    tools:ignore="ButtonStyle"
                    android:id="@+id/budiv"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange"
                    android:onClick="operationClick"
                    android:text="÷"
                    android:textColor="@color/white"
                    android:textSize="40sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    tools:ignore="ButtonStyle"
                    android:onClick="NumClick"
                    android:id="@+id/bu7"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/buttonbackground"
                    android:text="7"
                    android:textSize="40sp" />

                <Button
                    tools:ignore="ButtonStyle"
                    android:onClick="NumClick"
                    android:id="@+id/bu8"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/buttonbackground"
                    android:text="8"
                    android:textSize="40sp" />

                <Button
                    tools:ignore="ButtonStyle"
                    android:onClick="NumClick"
                    android:id="@+id/bu9"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/buttonbackground"
                    android:text="9"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/bumul"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange"
                    android:onClick="operationClick"
                    android:text="x"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    tools:ignore="ButtonStyle" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    tools:ignore="ButtonStyle"
                    android:onClick="NumClick"
                    android:id="@+id/bu4"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/buttonbackground"
                    android:text="4"
                    android:textSize="40sp" />

                <Button
                    tools:ignore="ButtonStyle"
                    android:onClick="NumClick"
                    android:id="@+id/bu5"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/buttonbackground"
                    android:text="5"
                    android:textSize="40sp" />

                <Button

                    tools:ignore="ButtonStyle"
                    android:onClick="NumClick"
                    android:id="@+id/bu6"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/buttonbackground"
                    android:text="6"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/buminus"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange"
                    android:onClick="operationClick"
                    android:text="―"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    tools:ignore="ButtonStyle" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button

                    android:onClick="NumClick"
                    android:id="@+id/bu1"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/buttonbackground"
                    android:text="1"
                    android:textSize="40sp"
                    tools:ignore="ButtonStyle" />

                <Button

                    tools:ignore="ButtonStyle"
                    android:onClick="NumClick"
                    android:id="@+id/bu2"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/buttonbackground"
                    android:text="2"
                    android:textSize="40sp" />

                <Button

                    tools:ignore="ButtonStyle"
                    android:onClick="NumClick"
                    android:id="@+id/bu3"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/buttonbackground"
                    android:text="3"
                    android:textSize="40sp" />

                <Button
                    tools:ignore="ButtonStyle"
                    android:id="@+id/buplus"
                    android:layout_width="30pt"
                    android:layout_margin="3dp"
                    android:layout_height="45pt"
                    android:layout_weight="1"
                    android:backgroundTint="@color/orange"
                    android:onClick="operationClick"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="40sp" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button

                tools:ignore="ButtonStyle"
                android:id="@+id/bu0"
                android:layout_width="60pt"
                android:layout_margin="3dp"
                android:layout_height="45pt"
                android:layout_weight="2"
                android:textAlignment="textStart"
                android:backgroundTint="@color/buttonbackground"
                android:onClick="NumClick"
                android:text="0"
                android:textSize="40sp" />

            <Button
                tools:ignore="ButtonStyle"
                android:onClick="DotClick"
                android:id="@+id/budot"
                android:layout_width="30pt"
                android:layout_margin="3dp"
                android:layout_height="45pt"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonbackground"
                android:text="."
                android:textSize="40sp" />

            <Button
                android:id="@+id/buequal"
                android:layout_width="30pt"
                android:layout_margin="3dp"
                android:layout_height="45pt"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:text="="
                android:textColor="@color/white"
                android:textSize="40sp"
                android:onClick="buttonEqual"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>
